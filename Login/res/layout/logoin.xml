<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:orientation="vertical" >
    
	<TextView 
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="注册"
	    android:textColor="#F08080"
	    android:textSize="50sp"
	    android:background="#00FA9A"/>
	<TableLayout 
	    android:id="@+id/table"
	    android:layout_centerInParent="true"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="0,1"
	    android:background="#EDEFEF"
	    android:padding="10dp">
	    <TableRow 
	        android:padding="15dp">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="用户名"
	            />
	        <EditText 
	            android:id="@+id/logoin_username"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#F4F3F4"
	            android:singleLine="true"/>
	    </TableRow>
	    <TableRow 
	        android:padding="15dp">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="密码"
	            />
	        <EditText 
	            android:id="@+id/logoin_password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#F4F3F4"
	            android:singleLine="true"
	            android:password="true"
	            android:inputType="number"/>
	    </TableRow>
	    <TableRow 
	        android:padding="15dp">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="重复密码"
	            />
	        <EditText 
	            android:id="@+id/logoin_password2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#F4F3F4"
	            android:singleLine="true"
	            android:password="true"
	            android:inputType="number"/>
	    </TableRow>
	    <TableRow 
	        android:padding="15dp">
	        <TextView 
	            
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="邮箱"
	            />
	        <EditText 
	            android:id="@+id/logoin_email"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#F4F3F4"
	            android:singleLine="true"
	            android:inputType="textEmailAddress"/>
	    </TableRow>
	    <TableRow >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="性别"
	         	android:gravity="center_vertical"
	         	android:paddingLeft="15dp"
	            />
	        <RadioGroup 
	            android:id="@+id/logoin_group"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <RadioButton 
	                android:id="@+id/logoin_man"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="男"/>
	            <RadioButton 
	                android:id="@+id/logo_woman"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="女"/>
	        </RadioGroup>
	    </TableRow>
	</TableLayout>
	<Button 
	    android:layout_marginTop="10dp"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:onClick="register"
	    android:layout_centerInParent="true"
	    android:layout_below="@id/table"
	    android:text="注册"
	    android:background="#FF7F50"/>
</RelativeLayout>
