<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView 
        android:src="@drawable/ue405"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/div_view_image"/>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    >
    
    <TextView 
        android:layout_marginLeft="10dp"
        android:text="Connor"
        android:id="@+id/div_view_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        
        android:text="Bnak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/div_view_autograph"
        android:layout_below="@id/div_view_username"
       	android:layout_alignLeft="@id/div_view_username"/>

</RelativeLayout>
</LinearLayout>

